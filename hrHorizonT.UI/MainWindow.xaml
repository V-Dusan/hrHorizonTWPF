<Window x:Class="hrHorizonT.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hrHorizonT.UI"
        xmlns:view="clr-namespace:hrHorizonT.UI.View"
        mc:Ignorable="d"
        Title="hrHorizonT" Height="450" Width="800" FontSize="20" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <view:NavigationView DataContext="{Binding NavigationViewModel}"/>
        <view:FriendDetailView Grid.Column="1" DataContext="{Binding FriendDetailViewModel}"/>
    </Grid>



</Window>
